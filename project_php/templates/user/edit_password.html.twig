            </div>
        </div>
    </div>
</div>
{% endblock %}




{% extends 'base.html.twig' %}

{% block title %}Modifier le mot de passe{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card p-4" style="max-width: 400px; width: 100%;">
        <div class="card-body">
            <h2 class="card-title text-primary text-center">Modifier le mot de passe</h2>
            {{ form_start(passwordForm) }}
                <div class="form-group">
                    {{ form_label(passwordForm.plainPassword.first, 'Nouveau mot de passe', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(passwordForm.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Saisir le nouveau mot de passe'}}) }}
                    {{ form_errors(passwordForm.plainPassword.first) }}
                </div>
                <div class="form-group">
                    {{ form_label(passwordForm.plainPassword.second, 'Confirmer le nouveau mot de passe', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(passwordForm.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmer le nouveau mot de passe'}}) }}
                    {{ form_errors(passwordForm.plainPassword.second) }}
                </div>
                <div class="d-flex justify-content-around mt-4 row">
                    <button type="submit" class="btn btn-primary" id="submit_edit_password">
                        Valider
                        <i class="bi bi-check2"></i>
                    </button>
                    <a href="{{ path('app_profile') }}" class="btn btn-warning">
                        Annuler
                        <i class="bi bi-arrow-counterclockwise"></i>
                    </a>
                </div>
            {{ form_end(passwordForm) }}
        </div>
    </div>
</div>
{% endblock %}
