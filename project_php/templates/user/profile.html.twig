{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card shadow p-4" style="max-width: 600px; width: 100%;">
            <div class="card-body">
                <h2 class="card-title text-primary text-center">Profil</h2>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label"><strong>Email :</strong></label>
                    <div class="col-sm-9">
                        <p class="form-control-plaintext">{{ user.email }}</p>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label"><strong>Pr√©nom :</strong></label>
                    <div class="col-sm-9">
                        <p class="form-control-plaintext">{{ user.prenom }}</p>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label"><strong>Nom :</strong></label>
                    <div class="col-sm-9">
                        <p class="form-control-plaintext">{{ user.nom }}</p>
                    </div>
                </div>
                <div class="d-flex justify-content-around mt-4 row">
                    <a href="{{ path('app_edit_user') }}" class="btn btn-primary">
                        Modifier le profil
                        <i class="bi bi-person-circle"></i>
                    </a>
                    <a href="{{ path('app_edit_user_password') }}" class="btn btn-danger">
                        Modifier le mot de passe
                        <i class="bi bi-lock"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
