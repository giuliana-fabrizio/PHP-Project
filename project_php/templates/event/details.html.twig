{% extends 'base.html.twig' %}

{% block title %}Détail de l'évènement{% endblock %}

{% block body %}
    <h1>{{ event.title }}</h1>
    <p>{{ event.description }}</p>
    <p>Date et heure de départ : {{ event.datetimeStart|date('d/m/Y H:i') }}</p>
    <p>Date et heure de fin : {{ event.datetimeEnd|date('d/m/Y H:i') }}</p>
    <p>Nombre de participants : {{ event.participants|length }} / {{ event.participantCount }}</p>
     <p>Places restantes : {{ remainingPlaces }}</p>

    {% if event.isPublic %}
        {% if app.user %}
            {% if event.participants.contains(app.user) %}
                <a href="{{ path('event_unregister', {id: event.id}) }}" class="btn btn-danger">Annuler l'inscription</a>
            {% else %}
                <a href="{{ path('event_register', {id: event.id}) }}" class="btn btn-success">S'inscrire</a>
            {% endif %}
        {% else %}
            <p>Pour vous inscrire à cet évènement, veuillez vous connecter.</p>
        {% endif %}
    {% else %}
        <p>Cet évènement est privé.</p>
    {% endif %}

    {% if event.creator == app.user %}
    <a href="{{ path('event_edit', { id: event.id }) }}" class="btn btn-primary">Modifier</a>
    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">
        Supprimer
    </button>

    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirmer la suppression</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Êtes-vous sûr de vouloir supprimer cet évènement ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                    <form action="{{ path('event_delete', { id: event.id }) }}" method="post" style="display:inline;">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endif %}
{% endblock %}
