{% extends 'base.html.twig' %}

{% block title %}Détail de l'événement{% endblock %}

{% block body %}
    <h1>{{ event.title }}</h1>
    <p>{{ event.description }}</p>
    <p>Date et heure de départ : {{ event.datetimeStart|date('d/m/Y H:i') }}</p>
    <p>Date et heure de fin : {{ event.datetimeEnd|date('d/m/Y H:i') }}</p>
    <p>Nombre de participants : {{ event.participants|length }} / {{ event.participantCount }}</p>

    {% if event.isPublic %}
        {% if app.user %}
            {% if event.participants.contains(app.user) %}
                <a href="{{ path('event_unregister', {id: event.id}) }}" class="btn btn-danger">Annuler l'inscription</a>
            {% else %}
                <a href="{{ path('event_register', {id: event.id}) }}" class="btn btn-success">S'inscrire</a>
            {% endif %}
        {% else %}
            <p>Pour vous inscrire à cet événement, veuillez vous connecter.</p>
        {% endif %}
    {% else %}
        <p>Cet événement est privé.</p>
    {% endif %}
{% endblock %}
